<% layout('layout') %>

<h2 class="mb-4">Welcome Dr. <%= user.name %></h2>

<h4>Your Patients</h4>
<% if (patients.length === 0) { %>
  <p>No patients assigned yet.</p>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle shadow-sm">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Age</th>
          <th>Condition</th>
          <th>Last Visit</th>
          <th>Profile</th>
        </tr>
      </thead>
      <tbody>
        <% patients.forEach(patient => { %>
          <tr>
            <td><%= patient.name %></td>
            <td><%= patient.email %></td>
            <td><%= patient.age || 'N/A' %></td>
            <td><%= patient.condition || 'N/A' %></td>
            <td><%= patient.lastVisit || 'N/A' %></td>
            <td>
              <a href="/patients/<%= patient.id %>" class="btn btn-sm btn-outline-primary">View</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>
